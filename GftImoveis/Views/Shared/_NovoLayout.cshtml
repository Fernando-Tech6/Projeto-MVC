<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>New Home</title>

  <!-- Custom fonts for this template-->
  <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

  <!-- Page level plugin CSS-->
  <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="~/css/sb-admin.css" rel="stylesheet">
      <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Lobster" />

  

</head>

<body id="page-top">

  <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    <a class="navbar-brand mr-1" asp-controller="Imoveis" asp-action="Index" style="font-family: Lobster; font-size: 30px" >New Home</a>

    <!-- Barra de Busca-->

    <form asp-controller="Imoveis" asp-action="Index"  class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0" >
      <div>
      <p class="input-group" style="margin-right: 50px; padding-top: 10px">
        <input class="form-control" type="text" name="busca" placeholder="Procurar"/>
        <button class="btn btn-primary" type="submit">
            <i type="submit" class="fas fa-search"></i>
          </button>
    </p>
     </div>
    </form>

    <!-- Navbar -->
    <ul class="navbar-nav ml-auto ml-md-0">
   
        <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Imoveis", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark" style="font-size: 20px;">Logout</button>
        </form>
       </li>

    </ul>

  </nav>

  <div id="wrapper">

    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
      <li class="nav-item" style="font-family: Verdana, Geneva, Tahoma, sans-serif;">
        <a class="nav-link" asp-controller="Imoveis" asp-action="Index">
          <span style="font-size: 15px;">Imóveis</span>
        </a>
      </li>
      <li class="nav-item dropdown" >
        <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span  style="font-size: 15px;" >Endereços</span>
        </a>
        <div class="dropdown-menu" aria-labelledby="pagesDropdown">
          <a class="dropdown-item" asp-controller="Enderecos" asp-action="Index" style="font-size: 15px;">Estados</a>
          <a class="dropdown-item" asp-controller="Municipios" asp-action="Index" style="font-size: 15px;">Municípios</a>
          <a class="dropdown-item" asp-controller="Bairros" asp-action="Index" style="font-size: 15px;">Bairros</a>
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-controller="Quartos" asp-action="Index">
          <span style="font-size: 15px;">Quartos</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-controller="Negocios" asp-action="Index">
          <span style="font-size: 15px;">Negocios</span></a>
      </li>
       <li class="nav-item">
        <a class="nav-link" asp-controller="Categorias" asp-action="Index">
          <span style="font-size: 15px;">Categorias</span></a>
      </li>
       <li class="nav-item">
        <a class="nav-link" asp-controller="Imoveis" asp-action="Create">
          <span style="font-size: 15px;">Criar</span></a>
      </li>
    </ul>

    <div id="content-wrapper">

      <div class="container-fluid">

        <!-- Render Body -->
         @RenderBody()

      </div>
      <!-- /.container-fluid -->

      <!-- Sticky Footer -->
      <footer class="sticky-footer">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>@DateTime.Now.Year - New Home</span>
          </div>
        </div>
      </footer>

    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Bootstrap core JavaScript-->
  <script src="~/vendor/jquery/jquery.min.js"></script>
  <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="~/js/sb-admin.min.js"></script>

 @RenderSection("Scripts", required: false)

</body>

</html>
